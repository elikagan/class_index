<%= form_for(@comment) do |f| %>


  <div class="field">
    <%= f.label :bubble_id %><br>
    <%= f.number_field :bubble_id %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, :placeholder => "Add your comment here"  %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
