<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="left_indent_container">
  <div class="field">
    <%= f.text_field :name, :class => "login_field", :placeholder => "Name"   %>
  </div>
  <div class="field">
    <%= f.text_field :email, :class => "login_field", :placeholder => "Email address"   %>
  </div>
  <div class="field">
    <%= f.password_field :password, :class => "login_field", :placeholder => "Password"  %>
  </div>
  <div class="field">
    <%= f.password_field :password_confirmation, :class => "login_field", :placeholder => "Password confirmation"  %>
  </div>
  <div class="actions">
    <%= f.submit "Save", :class => "login_button"%>
  </div>
<% end %>
</div>
