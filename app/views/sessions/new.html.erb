<div class="page_header">Log in</div>
<%= form_for(@user, {url:sessions_path}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="left_indent_container">
  <div class="field">
    <%= f.text_field :email, :class => "login_field", :placeholder => "Email address" %>
  </div>
  <div class="field">
    <%= f.password_field :password, :class => "login_field", :placeholder => "Password" %>
  </div>
  <div class="actions">
    <%= f.submit "Log in", :class => "login_button"%>
  </div>
<% end %>
</div>